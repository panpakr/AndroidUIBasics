<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_style"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:text="Help Me !!!"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:background="@color/cardview_dark_background"
        />


    <Button
        android:id="@+id/button_style_xml"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left"
        android:padding="@dimen/button_textPadding"
        android:text="@string/button_text"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size"
        android:fontFamily="@string/button_font_family"
        android:textStyle="italic"
        android:background="@android:color/holo_blue_bright"
        />

    <Button
        android:id="@+id/button_style_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:padding="@dimen/button_textPadding"
        android:text="Help Me !!!"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:background="@color/cardview_dark_background"
        />

    <Button
        android:id="@+id/button_style_theme"
        style="@style/cta_style"
        android:layout_width="199dp"
        android:text="@string/button_text" />


</LinearLayout>